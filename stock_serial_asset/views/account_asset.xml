<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="linked_serial_numbers_action" model="ir.actions.act_window">
        <field name="name">Serial Numbers</field>
        <field name="res_model">stock.production.lot</field>
        <field name="view_type">form</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="account_asset_form" model="ir.ui.view">
        <field name="name">Asset Form: add linked serial numbers</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset_management.account_asset_view_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="object" name="open_linked_serial_numbers" icon="fa-fa-arrows"
                    attrs="{'invisible': [('serial_number_count', '=', 0)]}">
                    <field name="serial_number_count" widget="statinfo" string="Serial Numbers"/>
                </button>
            </div>
        </field>
    </record>

</odoo>
