<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="picking_type_form_with_enable_return" model="ir.ui.view">
        <field name="name">Stock Picking Type Form: Add enable_previous_step_return</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.view_picking_type_form"/>
        <field name="arch" type="xml">
            <field name="show_reserved" position="after">
                <field name="enable_previous_step_return"/>
                <field name="enable_no_backorder"/>
            </field>
        </field>
    </record>

</odoo>
