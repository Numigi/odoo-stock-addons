<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="product_template_form_with_asset_profile" model="ir.ui.view">
        <field name="name">Product Template Form: Add asset profile</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="account.product_template_form_view"/>
        <field name="arch" type="xml">
            <group name="properties" position="inside">
                <group string="Assets" name="assets">
                    <field name="asset_profile_id"/>
                </group>
            </group>
        </field>
    </record>

</odoo>
