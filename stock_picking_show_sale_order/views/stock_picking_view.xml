<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="stock_picking_list" model="ir.ui.view">
        <field name="name">Stock Picking List: add sale order</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="sale_id"/>
            </field>
        </field>
    </record>

    <record id="stock_picking_form" model="ir.ui.view">
        <field name="name">Stock Picking Form: add sale order</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="sale_id"/>
            </field>
        </field>
    </record>

</odoo>
