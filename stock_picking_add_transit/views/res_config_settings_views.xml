<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_stock" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale.stock.stock</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="warning_info" position="after">
                <div class="col-12 col-lg-6 o_setting_box" title="Add Transit Partner Type">
                    <div class="o_setting_right_pane">
                        <label for="transit_partner_type"/>
                        <div class="text-muted">
                            Which information to set in partner field when adding a transit.
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="transit_partner_type" class="o_light_label" widget="radio"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
