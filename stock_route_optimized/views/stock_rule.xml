<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="stock_rule_form" model="ir.ui.view">
        <field name="name">Stock Rule: add special route</field>
        <field name="model">stock.rule</field>
        <field name="inherit_id" ref="stock.view_stock_rule_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='rule_ids']/tree" position="inside">
                <field name="special_route_id"/>
            </xpath>
        </field>
    </record>

</odoo>
