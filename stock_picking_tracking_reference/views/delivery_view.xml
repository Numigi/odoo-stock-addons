<?xml version="1.0" encoding="UTF-8"?>
<odoo>

        <record id="view_picking_with_carrier_tracking_ref_out_form" model="ir.ui.view">
            <field name="name">delivery.stock.picking_withcarrier.form.view</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form"/>
            <field name="arch" type="xml">
              <data>
                <xpath expr="//field[@name='carrier_tracking_ref']" position="attributes">
                    <attribute name="attrs">
                        {'readonly': ['|','&amp;',('state', 'in', ('cancel')),('picking_type_code', '=', 'outgoing'),'&amp;',('state', 'in', ('done', 'cancel')), ('picking_type_code', '!=', 'outgoing')]}
                    </attribute>
                </xpath>
              </data>
            </field>
        </record>

</odoo>
