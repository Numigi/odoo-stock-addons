<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="stock_location_route_form" model="ir.ui.view">
        <field name="name">Stock Route: add special route</field>
        <field name="model">stock.location.route</field>
        <field name="inherit_id" ref="stock.stock_location_route_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='rule_ids']/tree" position="inside">
                <field name="special_route_id"/>
            </xpath>
        </field>
    </record>

</odoo>
