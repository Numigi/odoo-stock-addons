<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_picking_internal_search_with_serial" model="ir.ui.view">
        <field name="name">Stock Picking Search: search by Lot / Serial Number</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="move_ids_without_package" string="Lot / Serial Number" filter_domain="[('move_ids_without_package.move_line_ids.lot_name','=',self)]"/>
            </field>
        </field>
    </record>

</odoo>
